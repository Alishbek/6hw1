<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.a6hw1.youtube.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_mainActivity_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </activity>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.a6hw1.youtube.ui.detail.DetailFragment"
        android:label="DetailFragment" />
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.a6hw1.youtube.ui.playlist.PlaylistFragment"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist" >

    </fragment>
</navigation>